    function confirmar(event, form) {
        event.preventDefault();

        $( "#dialog-confirm" ).dialog({
        resizable: false,
        height: "auto",
        width: 400,
        modal: true,
        buttons: {
            "Sim": function() {
                $( this ).dialog( "close" );
                form.submit();
            },
            'Não': function() {
                $( this ).dialog( "close" );
                console.log('cancelado');
            }
        }
    });
}
</script> 