<%- include ('../../partials/header.ejs') %><!--Loading Footer from partials-->
<%- include ('../../partials/navbar.ejs') %><!--Loading navbar from partials--> 
<div class="container" id="container">
   <div class="card">
        <div class="card-header">
            <h3>Novo artigo</h3>
        </div><!--Card-header from bootstrap-->
        
        <div id="cardBody" class="card-body">
            <form action="/articles/save" method="POST">
                <input 
                    class="form-control"
                    type="text" 
                    name="title" 
                    placeholder="Defina o nome do artigo">
                <textarea 
                    name="body" 
                    class="form-control" 
                    placeholder="Escrava aqui o seu artigo!"
                    id="article"></textarea>
                <label for="categoria">Categoria:</label>
                <select name="category" class="form-control">
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"> <%= category.title %> </option>   
                    <% }) %>
                </select>
                <button id="btnSuccess" class="btn btn-success">Criar</button><!--Btn-Success from Bootstrap-->
            </form><!--Form-cotrol from bootstrap-->
        </div><!--Card-body from bootsrap-->
    </div><!--card from bootstrap-->
</div><!--Container from bootstrap-->
<%- include ('../../partials/footer.ejs') %><!--Loading Footer from partials-->
<script src="/tinymce/tinymce.min.js"></script>
<script>
    //Start tinymce
    tinymce.init({
        //changing language
        language: "pt_BR",
        //select id from textarea to add tiny
        selector: "#article",
        //add plugins to tiny
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons' 
            /*create list, Autolinker, link with button, to add image, 
            simple list, to print, preview, line, ctrl f to search,
            word count, fullscreen to open screen, insert data time on article,
            media to insert yt videos and etc, save article as file on your pc,
            to create table, to paste on article, to add emojis
             */
        ]
    });
</script> 